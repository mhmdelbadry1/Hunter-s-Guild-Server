# Caddy reverse proxy configuration  
# Handles SSL automatically via Let's Encrypt

{$DOMAIN} {
    # Modpack distribution (public access)
    handle /modpack/* {
        reverse_proxy api:3001 {
            timeout 10m
        }
    }
    
    # API routes with extended timeout for uploads
    handle /api/* {
        reverse_proxy api:3001 {
            timeout 15m
            header_up X-Forwarded-For {remote_host}
            header_up X-Real-IP {remote_host}
            # Allow large request bodies for mod uploads
            request_body {
                max_size 2GB
            }
        }
    }
    
    # Socket.IO for real-time updates
    handle /socket.io/* {
        reverse_proxy api:3001 {
            timeout 5m
        }
    }
    
    # Frontend (React app)
    handle {
        reverse_proxy frontend:80
    }
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }
    
    # Enable compression
    encode gzip zstd
    
    # Logging
    log {
        output stdout
        format console
    }
}

:80 {
    # Modpack distribution (public access)
    handle /modpack/* {
        reverse_proxy api:3001 {
            timeout 10m
        }
    }
    
    # API routes with extended timeout for uploads
    handle /api/* {
        reverse_proxy api:3001 {
            timeout 15m
            header_up X-Forwarded-For {remote_host}
            header_up X-Real-IP {remote_host}
            # Allow large request bodies for mod uploads
            request_body {
                max_size 2GB
            }
        }
    }
    
    # Socket.IO for real-time updates
    handle /socket.io/* {
        reverse_proxy api:3001 {
            timeout 5m
        }
    }
    
    # Frontend (React app)
    handle {
        reverse_proxy frontend:80
    }
    
    # Security headers
    header {
        X-Content-Type-Options nosniff
        X-Frame-Options DENY
        Referrer-Policy strict-origin-when-cross-origin
    }
    
    # Enable compression
    encode gzip zstd
    
